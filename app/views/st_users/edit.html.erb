<div class="profile-form">
  <div class="col-lg-12">
    <%= form_for current_st_user do |f| %>
      <h2 style="padding-top: 20px">プロフィール画像</h2>
      <div class="edit-p file">
        <%= f.file_field :image, class: "form-control floating-label", placeholder: "画像アップロード" %>
      </div>
      <h2>登録情報</h2>
      <div class="edit-p">
        <div class="col-lg-6">
          <%= f.label :名前（姓）%><br>
          <%= f.text_field :family_name, placeholder: "姓", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :名前（名）%><br>
          <%= f.text_field :first_name, placeholder: "名", class: "form-control" %>
        </div>
      </div>
      <div class="edit-p">
        <div class="col-lg-6">
          <%= f.label :姓（カナ）%><br>
          <%= f.text_field :family_name_kana, placeholder: "セイ", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :名（カナ）%><br>
          <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :ニックネーム%><br>
          <%= f.text_field :nickname, placeholder: "ニックネーム", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :学校%><br>
          <%= f.text_field :school, placeholder: "学校", class: "form-control" %>
        </div>
        <div class="col-lg-6">
          <%= f.label :学年 %><br>
          <%= f.text_field :grade, placeholder: "学年", class: "form-control" %><br><br>
        </div>
      </div>
      <div class="edit-p">
        <%= f.submit "送信", class: "btn" %><br><br>
      </div>
    <% end %>
  </div>
</div>