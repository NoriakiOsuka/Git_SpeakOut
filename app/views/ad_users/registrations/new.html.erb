<div class="login_message">
  <h2>新規登録（評価者）</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
  
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  
    <div class="field">
      <%= f.label :パスワード（確認） %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    
    <div class="field">
      <%= f.label :姓 %><br />
      <%= f.text_field :family_name, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :姓（カナ） %><br />
      <%= f.text_field :family_name_kana, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :名（カナ） %><br />
      <%= f.text_field :first_name_kana, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :ニックネーム %><br />
      <%= f.text_field :nickname, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :職業 %><br />
      <%= f.text_field :occupation, autofocus: true %>
    </div>
    
    <div class="field">
      <%= f.label :役職 %><br />
      <%= f.text_field :position, autofocus: true %>
    </div>
  
    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
  
  <%= render "ad_users/shared/links" %>
</div>